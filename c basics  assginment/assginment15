
#include<stdio.h>
int main()
{
	char o;
	float num1,num2;
	printf("enter opertor aithe + or - or * or divide:");
	fflush(stdin);fflush(stdout);
	scanf("%c",&o);
	printf("enter two operands:");
	fflush(stdin);fflush(stdout);
	scanf("%f %f",&num1,&num2);
	switch(o){
	case'+':
		printf("%1f+%2f=%f",num1,num2,num1+num2);
		break;
	case'-':
		printf("%1f-%2f=%f",num1,num2,num1-num2);
		break;
	case'*':
		printf("%1f*%2f=%f",num1,num2,num1*num2);
		break;

	case'/':
		printf("%1f/%2f=%f",num1,num2,num1/num2);
		break;
	default:
		printf("error!! opertator is not correct");
		break;
	}



}